<h1>Create an image</h1>

<%= form_with scope: :image, url: images_path, local: true do |form| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
